@inject contentStorage content


<div class="flex justify-center">
    <div class="pt-20 w-full max-w-6xl mx-10 md:mx-36">
        <div class="grid justify-items-center" style="grid-template-columns: repeat(auto-fit, minmax(10rem, 1fr));">
            @foreach (var categoryPair in c.footer.links)
            {
                <div class="m-4 mx-2 md:m-6">
                    <h4 class="text-b600 m-2 mb-4 text-center">
                        @categoryPair.Name
                    </h4>
                    @foreach (var linkPair in categoryPair.Value) {
                        <div class="m-2 text-center">
                            <a href="@linkPair[1].ToString()" class="hover:underline text-gray-300 hover:text-focusColor">@linkPair[0]</a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>


@code {
    private dynamic c = default!;

    protected override void OnInitialized()
    {
        c = content.files["fundamental"];
    }
}

